{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug AMD64",
            "type": "shell",
            "command": "make all CONFIGURATION=debug PLATFORM=amd64 -C ${workspaceFolder} --no-print-directory",
            "windows":{
                // Example for Windows specific command:
                //"command": "make all CONFIGURATION=debug PLATFORM=amd64 AS=C:/bin/vc152/ml.exe -C ${workspaceFolder} --no-print-directory"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Release AMD64",
            "type": "shell",
            "command": "make all CONFIGURATION=release PLATFORM=amd64 -C ${workspaceFolder} --no-print-directory",
            "group": "build"
        },
        {
            "label": "Debug x86",
            "type": "shell",
            "command": "make all CONFIGURATION=debug PLATFORM=x86 -C ${workspaceFolder} --no-print-directory",
            "group": "build"
        },
        {
            "label": "Release x86",
            "type": "shell",
            "command": "make all CONFIGURATION=release PLATFORM=x86 -C ${workspaceFolder} --no-print-directory",
            "group": "build"
        },
        {
            "label": "Tests",
            "type": "shell",
            "command": "echo 'Tests not implemented.'",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
