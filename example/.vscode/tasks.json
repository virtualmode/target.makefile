{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug-x86",
            "type": "shell",
            "command": "make all CONFIGURATION=debug PLATFORM=x86 -C ${workspaceFolder} --no-print-directory",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release-x86",
            "type": "shell",
            "command": "make all CONFIGURATION=release PLATFORM=x86 -C ${workspaceFolder} --no-print-directory",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug-x64",
            "type": "shell",
            "command": "make all CONFIGURATION=debug PLATFORM=x64 -C ${workspaceFolder} --no-print-directory",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release-x64",
            "type": "shell",
            "command": "make all CONFIGURATION=release PLATFORM=x64 -C ${workspaceFolder} --no-print-directory",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
